{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "typeorm": "typeorm-ts-node-esm -d ormconfig.ts",
    "prebuild": "rimraf .build && npm run format && npm run lint -p tsconfig.json --fix",
    "rimraf": "./node_modules/rimraf/bin.js",
    "copyResoruces": "mkdir -p .build/src/resources/ && cp -vr ./src/resources/images/ .build/src/resources/ && cp -vr ./src/resources/certs/ .build/src/resources/ && cp -vr ./src/resources/templates/ .build/src/resources/ && cp -vr ./src/resources/locales/ .build/src/resources/",
    "copyDoc": "mkdir -p .build/documents && cp -vr ./documents/api/ .build/documents/api/ 2>/dev/null || :",
    "generateDoc": "./node_modules/.bin/typedoc --exclude '**/node_modules/**' --exclude '**/migrations/**' --exclude '**/test/**' --exclude '**/*.doc.ts' --exclude '**/*.interface.ts'",
    "build": "tsc && npm run copyResoruces",
    "prestart": "npm run lint && npm run doc",
    "start": "nodemon",
    "test": "cross-env NODE_PATH=./ mocha -r ts-node/register src/**/*.test.ts",
    "system-test": "cross-env NODE_ENV=test mocha-parallel-tests --timeout 60000 -r ts-node/register test/**/*.test.ts",
    "lint": "./node_modules/.bin/eslint src/**/*.ts src/**/**/*.ts src/**/**/**/*.ts",
    "lint-fix": "./node_modules/.bin/eslint src/**/*.ts src/**/**/*.ts src/**/**/**/*.ts --fix",
    "prettier:base": "prettier --parser typescript --single-quote --print-width=120",
    "prettier": "npm run prettier:base -- --write \"*.{ts,tsx}\" \"src/**/*.{ts,tsx}\"",
    "format": "prettier \"{src,config}/**/*.ts\" --write",
    "pre-commit": "npm run prebuild --staged",
    "prepare": "husky install",
    "doc": "./node_modules/apidoc/bin/apidoc -i src/server/controllers/ -o documents/api/"
  },
  "author": "nitin kachhadiya",
  "license": "ISC",
